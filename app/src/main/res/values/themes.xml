<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Platform.Theme.Ibis" parent="android:Theme.Material.Light">
    </style>

    <style name="Base.Theme.Ibis" parent="Platform.Theme.Ibis">
        <item name="android:windowActionModeOverlay">true</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Ibis" parent="Base.Theme.Ibis">

    </style>

    <style name="Theme.Ibis.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Ibis.Immerse" parent="Theme.Ibis.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Ibis.Home" parent="Theme.Ibis.Immerse">
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowLightStatusBar">@bool/use_light_status_bar</item>
    </style>

</resources>
